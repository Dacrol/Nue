{
  "root": true,
  "extends": [
    "standard",
    "plugin:vue/recommended"
  ],
  "plugins": [
    "vue"
  ],
  "rules": {
    "semi": ["error", "never"],
    "space-before-function-paren": "off",
    "vue/attributes-order": "off",
    "vue/max-attributes-per-line": "off"
  },
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2018,
    "parser": "babel-eslint"
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  }
}
